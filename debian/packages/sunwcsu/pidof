# Use is subject to license terms.
#
# $Id$
#
# This script emulates pidof functionality required by many GNU apps.
#

if ps -ef -o pid,comm|grep -v grep|grep $@ >/dev/null; then
	echo $(ps -ef -o pid,comm|grep -v grep|grep $@|head -1|awk '{print $1}')
	exit 0
fi
exit 1

