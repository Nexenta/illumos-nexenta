#!/usr/bin/make -f
# debian/rules for alien

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

include ../rules.defs

PACKAGE=$(shell dh_listpackages)

build:
	dh_testdir

clean:
	dh_testdir
	dh_testroot
	dh_clean -d
	dh_installproto clean
	find . -maxdepth 1 -mindepth 1 \
		-not -name pidof \
		-not -name ldconfig.sh \
		-not -name sysidconfig \
		-not -name "*.svn*" \
		-not -name debian -print0 | \
		xargs rm -rf

binary-indep: build

binary-arch: build
	dh_testdir
	dh_testroot
	dh_clean -d
	dh_installdirs

	dh_installdocs
	dh_installchangelogs
	dh_installproto

# Copy the packages's files.
	find . -maxdepth 1 -mindepth 1 \
		-not -name pidof \
		-not -name ldconfig.sh \
		-not -name sysidconfig \
		-not -name "*.svn*" \
		-not -name debian -print0 | \
		xargs -0 -r -i cp -a {} debian/sunwcsu

#
# If you need to move files around in debian/$(PACKAGE) or do some
# binary patching, do it here
#
	mkdir -p debian/tmp/bin
	mkdir -p debian/tmp/sbin
	mkdir -p debian/tmp/usr/sbin
	mkdir -p debian/tmp/usr/bin
	
# ldconfig workaround
	cp -a ldconfig.sh debian/tmp/bin/ldconfig
	chown root:bin debian/tmp/bin/ldconfig
	chmod 755 debian/tmp/bin/ldconfig

# sysidconfig workaround
	cd debian/tmp/sbin; ln -s ../bin/ldconfig ldconfig
	cp -a sysidconfig debian/tmp/usr/sbin/sysidconfig
	chown root:bin debian/tmp/usr/sbin/sysidconfig
	chmod 755 debian/tmp/usr/sbin/sysidconfig

# pidof workaround
	cp -a pidof debian/tmp/usr/bin/pidof
	chown root:bin debian/tmp/usr/bin/pidof
	chmod 755 debian/tmp/usr/bin/pidof

	dh_movefiles bin/ldconfig
	dh_movefiles sbin/ldconfig
	dh_movefiles usr/sbin/sysidconfig
	dh_movefiles usr/bin/pidof


# This has been known to break on some wacky binaries.
	dh_sunstrip
	dh_compress
#	dh_fixperms
	dh_makeshlibs
	dh_suninstalldeb
	-dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb
	dh_installproto clean

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary
